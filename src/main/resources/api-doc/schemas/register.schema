{
  "properties": {
    "email": {
      "type": "string",
      "required": true,
      "minLength": 3,
      "maxLength": 255,
      "regex": "^[A-Za-z0-9._%+-]+@[A-Za-z0-9.-]+\\.[A-Za-z]{2,6}$"
    },
    "password": {
      "type": "string",
      "required": true,
      "minLength": 2,
      "maxLength": 64,
      "regex": "^(?=.*[0-9])(?=.*[a-z])(?=.*[A-Z])(?=\\S+$).{8,64}$"
    }
  }
}
